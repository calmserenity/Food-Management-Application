<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="800.0" prefHeight="650.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.address.controller.RegisterController">
    <center>
        <VBox alignment="CENTER" spacing="20.0" styleClass="login-vbox" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" spacing="15.0" maxWidth="450.0" styleClass="login-form-container">
                    <padding>
                        <Insets top="30.0" right="40.0" bottom="30.0" left="40.0" />
                    </padding>
                    <children>
                        <Label text="Register" styleClass="login-title">
                            <font><Font name="System Bold" size="28.0" /></font>
                        </Label>

                        <TextField fx:id="firstNameField" alignment="CENTER" promptText="First Name" prefWidth="300.0" maxWidth="300.0" />
                        <TextField fx:id="lastNameField" alignment="CENTER" promptText="Last Name" prefWidth="300.0" maxWidth="300.0" />
                        

                        <TextField fx:id="userIdField" alignment="CENTER" promptText="User ID" prefWidth="300.0" maxWidth="300.0" />
                        <PasswordField fx:id="passwordField" alignment="CENTER" promptText="Password" prefWidth="300.0" maxWidth="300.0" />
                        <PasswordField fx:id="validatePasswordField" alignment="CENTER" promptText="Validate Password" prefWidth="300.0" maxWidth="300.0" />

                        <HBox alignment="CENTER" spacing="15.0" maxWidth="300.0">
                            <VBox.margin><Insets top="10.0" /></VBox.margin>
                            <children>
                                <Button onAction="#handleSubmit" mnemonicParsing="false" text="Submit" HBox.hgrow="ALWAYS" styleClass="login-button" />
                                <Button onAction="#handleCancel" mnemonicParsing="false" text="Cancel" HBox.hgrow="ALWAYS" styleClass="cancel-button" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>